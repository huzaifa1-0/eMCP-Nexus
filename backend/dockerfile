# Start with a Python 3.12 slim image
FROM python:3.12-slim

# Set the working directory
WORKDIR /code

# Install the C compiler and build tools
RUN apt-get update && apt-get install -y \
    build-essential \
    gcc \
    && rm -rf /var/lib/apt/lists/*

# Copy requirements (Source: requirements.txt, Dest: .)
COPY requirements.txt .

# Install dependencies
RUN pip install --no-cache-dir -r requirements.txt

# Copy the rest of the app (Source: ., Dest: .)
# âœ… FIXED: This must have two dots separated by a space
COPY . .

# Set python path
ENV PYTHONPATH="/code"

# Expose port
EXPOSE 8000

# Run the app
CMD ["uvicorn", "main:app", "--host", "0.0.0.0", "--port", "8000"]